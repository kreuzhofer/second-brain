generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  extensions = [vector]
}

enum Channel {
  chat
  email
  api
}

enum EntryCategory {
  people
  projects
  ideas
  task
  admin
  inbox
}

enum ProjectStatus {
  active
  waiting
  blocked
  someday
  done
}

enum AdminStatus {
  pending
  done
}

enum InboxStatus {
  needs_review
}

enum Role {
  user
  assistant
}

enum JobStatus {
  running
  success
  failed
}

enum Operation {
  create
  update
  delete
  move
}

enum EntryLinkType {
  mention
  relationship
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  passwordHash String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  conversations      Conversation[]
  messages           Message[]
  summaries          ConversationSummary[]
  emailThreads       EmailThread[]
  entries            Entry[]
  tags               Tag[]
  auditLogs          EntryAuditLog[]
  focusTracks        FocusTrack[]
  focusSessions      FocusSession[]
  digestPreferences  DigestPreference[]
  dailyTipStates     DailyTipState[]
  offlineQueueItems  OfflineQueueItem[]
  entryLinks         EntryLink[]
  entryNudges        EntryNudge[]
  calendarSources    CalendarSource[]
  calendarBusyBlocks CalendarBusyBlock[]
  calendarSettings   CalendarSettings?
  pushSubscriptions  PushSubscription[]
}

model Conversation {
  id         String    @id @default(uuid())
  userId     String?
  user       User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  channel    Channel
  externalId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  messages   Message[]
  summaries  ConversationSummary[]
  
  @@index([userId, channel, externalId])
}

model Message {
  id              String       @id @default(uuid())
  userId          String?
  user            User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  role            Role
  content         String
  filedEntryPath  String?
  filedConfidence Float?
  createdAt       DateTime     @default(now())
  
  @@index([userId, createdAt])
  @@index([conversationId, createdAt])
}

model ConversationSummary {
  id              String       @id @default(uuid())
  userId          String?
  user            User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  summary         String
  messageCount    Int
  startMessageId  String
  endMessageId    String
  createdAt       DateTime     @default(now())
  
  @@index([userId, createdAt])
  @@index([conversationId, createdAt])
}

model EmailThread {
  id             String   @id @default(uuid())
  userId         String?
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  messageId      String   @unique
  threadId       String
  inReplyTo      String?
  subject        String
  fromAddress    String
  conversationId String
  createdAt      DateTime @default(now())
  
  @@index([userId, threadId])
  @@index([userId, conversationId])
}

model PushSubscription {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  endpoint  String
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  @@unique([userId, endpoint])
  @@index([userId])
}

model CronJobRun {
  id          String    @id @default(uuid())
  jobName     String
  status      JobStatus
  result      String?
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  
  @@index([jobName, startedAt])
}

model EntryAuditLog {
  id            String    @id @default(uuid())
  userId        String?
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  entryPath     String
  entryId       String?
  entry         Entry?    @relation(fields: [entryId], references: [id])
  operation     Operation
  gitCommitHash String?
  channel       Channel
  messageId     String?
  createdAt     DateTime  @default(now())
  
  @@index([userId, entryPath, createdAt])
  @@index([entryId, createdAt])
}

model FocusTrack {
  id           String    @id @default(uuid())
  userId       String?
  user         User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  youtubeId    String
  title        String?
  channelTitle String?
  searchTerm   String?
  rating       Int       @default(0)
  likesCount   Int       @default(0)
  dislikesCount Int      @default(0)
  timesPlayed  Int       @default(0)
  lastPlayedAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sessions     FocusSession[]

  @@unique([userId, youtubeId])
  @@index([userId, rating])
}

model FocusSession {
  id              String     @id @default(uuid())
  userId          String?
  user            User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  entryPath       String
  entryId         String?
  entry           Entry?     @relation(fields: [entryId], references: [id])
  entryName       String?
  durationSeconds Int
  startedAt       DateTime
  endedAt         DateTime
  completed       Boolean    @default(true)
  notes           String?
  trackId         String?
  track           FocusTrack? @relation(fields: [trackId], references: [id])
  createdAt       DateTime   @default(now())

  @@index([userId, startedAt])
  @@index([entryPath, startedAt])
  @@index([entryId, startedAt])
  @@index([trackId])
}

model Entry {
  id                String         @id @default(uuid())
  userId            String?
  user              User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  category          EntryCategory
  slug              String
  title             String
  confidence        Float?
  sourceChannel     Channel?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  lastTouched       DateTime?
  focusMinutesTotal Int            @default(0)
  focusLastSession  DateTime?

  projectDetails    ProjectDetails?
  adminDetails      AdminTaskDetails?
  ideaDetails       IdeaDetails?
  personDetails     PersonDetails?
  inboxDetails      InboxDetails?
  sections          EntrySection[]
  logs              EntryLog[]
  tags              EntryTag[]
  revisions         EntryRevision[]
  embedding         EntryEmbedding?
  auditLogs         EntryAuditLog[]
  focusSessions     FocusSession[]
  outgoingLinks     EntryLink[] @relation("EntryLinkSource")
  incomingLinks     EntryLink[] @relation("EntryLinkTarget")
  nudges            EntryNudge[]

  @@unique([userId, category, slug])
  @@index([userId, category])
}

model ProjectDetails {
  entryId       String        @id
  entry         Entry         @relation(fields: [entryId], references: [id], onDelete: Cascade)
  status        ProjectStatus
  nextAction    String?
  relatedPeople String[]
  dueDate       DateTime?
  stale         Boolean       @default(false)
  staleSince    DateTime?
}

model AdminTaskDetails {
  entryId          String      @id
  entry            Entry       @relation(fields: [entryId], references: [id], onDelete: Cascade)
  status           AdminStatus
  dueDate          DateTime?
  durationMinutes  Int         @default(30)
  fixedAt          DateTime?
  priority         Int         @default(3)
}

model CalendarSettings {
  id               String   @id @default(uuid())
  userId           String?  @unique
  user             User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  workdayStartTime String   @default("09:00")
  workdayEndTime   String   @default("17:00")
  workingDays      Int[]    @default([1, 2, 3, 4, 5])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model IdeaDetails {
  entryId          String   @id
  entry            Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  oneLiner         String
  relatedProjects  String[]
}

model PersonDetails {
  entryId         String   @id
  entry           Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  context         String
  followUps       String[]
  relatedProjects String[]
  lastTouched     DateTime?
}

model InboxDetails {
  entryId           String        @id
  entry             Entry         @relation(fields: [entryId], references: [id], onDelete: Cascade)
  originalText      String
  suggestedCategory EntryCategory
  suggestedName     String
  status            InboxStatus   @default(needs_review)
}

model EntrySection {
  id              String   @id @default(uuid())
  entryId         String
  entry           Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  key             String
  title           String
  order           Int
  contentMarkdown String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([entryId, key])
  @@index([entryId, order])
}

model EntryLog {
  id        String   @id @default(uuid())
  entryId   String
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  channel   Channel
  message   String
  createdAt DateTime @default(now())

  @@index([entryId, createdAt])
}

model Tag {
  id    String     @id @default(uuid())
  userId String?
  user   User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name  String
  entries EntryTag[]

  @@unique([userId, name])
}

model EntryTag {
  entryId String
  tagId   String
  entry   Entry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  tag     Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([entryId, tagId])
}

model EntryRevision {
  id        String   @id @default(uuid())
  entryId   String
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  revision  Int
  snapshot  Json
  channel   Channel?
  messageId String?
  createdAt DateTime @default(now())

  @@unique([entryId, revision])
  @@index([entryId, createdAt])
}

model EntryEmbedding {
  entryId   String   @id
  entry     Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  vector    Unsupported("vector(3072)")
  hash      String
  updatedAt DateTime @updatedAt
}

model EntryLink {
  id            String        @id @default(uuid())
  userId        String?
  user          User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceEntryId String
  sourceEntry   Entry         @relation("EntryLinkSource", fields: [sourceEntryId], references: [id], onDelete: Cascade)
  targetEntryId String
  targetEntry   Entry         @relation("EntryLinkTarget", fields: [targetEntryId], references: [id], onDelete: Cascade)
  type          EntryLinkType @default(mention)
  createdAt     DateTime      @default(now())

  @@unique([sourceEntryId, targetEntryId, type])
  @@index([userId, sourceEntryId])
  @@index([userId, targetEntryId])
}

model DigestPreference {
  id                 String         @id @default(uuid())
  userId             String?
  user               User?          @relation(fields: [userId], references: [id], onDelete: Cascade)
  focusCategories    EntryCategory[]
  maxItems           Int
  maxOpenLoops       Int
  maxSuggestions     Int
  maxWords           Int?
  includeNudges      Boolean        @default(true)
  maxNudgesPerDay    Int            @default(3)
  nudgeCooldownDays  Int            @default(3)
  includeStaleInbox  Boolean        @default(true)
  includeSmallWins   Boolean        @default(true)
  includeOpenLoops   Boolean        @default(true)
  includeSuggestions Boolean        @default(true)
  includeTheme       Boolean        @default(true)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt

  @@unique([userId])
}

model EntryNudge {
  id            String   @id @default(uuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  entryId       String
  entry         Entry    @relation(fields: [entryId], references: [id], onDelete: Cascade)
  lastNudgedAt  DateTime
  lastReason    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, entryId])
  @@index([userId, lastNudgedAt])
}

model DailyTipState {
  id        String   @id @default(uuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  order     Int[]
  cursor    Int
  lastTip   String?
  updatedAt DateTime?

  @@unique([userId])
}

model OfflineQueueItem {
  id                 String   @id
  userId             String?
  user               User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tool               String
  args               Json
  channel            Channel
  context            Json?
  createdAt          DateTime @default(now())
  attempts           Int      @default(0)
  lastError          String?
  nextAttemptAt      DateTime?
  processingStartedAt DateTime?
  status             String   @default("pending")

  @@index([userId, status, createdAt])
}

model CalendarSource {
  id         String   @id @default(uuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  url        String
  enabled    Boolean  @default(true)
  color      String?
  etag       String?
  lastSyncAt DateTime?
  fetchStatus String  @default("never_synced")
  fetchError String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  busyBlocks CalendarBusyBlock[]

  @@unique([userId, url])
  @@index([userId, enabled])
}

model CalendarBusyBlock {
  id         String   @id @default(uuid())
  userId     String?
  user       User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sourceId   String
  source     CalendarSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  blockKey   String
  externalId String?
  title      String?
  location   String?
  startAt    DateTime
  endAt      DateTime
  isAllDay   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([sourceId, blockKey])
  @@index([userId, startAt, endAt])
  @@index([sourceId, startAt])
}
